<%= form_for inquiry do |f| %>

  <% if inquiry.errors.any? %>
    <ul>
      <% inquiry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  

  <div class="form-group" >
  <div class="row">  
<div class="col-xs-6">
  <div> 
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
    <br/><br/>
  </div>
  
  <div>
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
    <br/><br/>
  </div>
  
  <div>
    <%= f.label :message %><br/>
    <%= f.text_area :message %>
    <br/><br/>
  </div>
  
  </div>

  <br><br>
 </div>
  <button class="btn btn-info" type="submit">Send email</button> 

 
  </div>
  

<% end %>